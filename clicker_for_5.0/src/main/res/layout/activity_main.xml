<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="@color/colorMain"
    tools:context="com.example.clicker_for_50.MainActivity">

    <TextView
        android:id="@+id/numb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="СТАРТ!!"
        android:textColor="@color/colorNumb"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.273" />

    <Button
        android:id="@+id/plusOne"
        android:layout_width="154dp"
        android:layout_height="102dp"
        android:layout_marginTop="55dp"
        android:background="@android:color/holo_green_dark"
        android:text="+1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintTop_toBottomOf="@+id/numb"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/reset"
        android:layout_width="202dp"
        android:layout_height="38dp"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="79dp"
        android:background="@android:color/holo_red_light"
        android:text="Сброс"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="8dp"
        android:text="Кликай хоть закликайся"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.117" />

    <TextView
        android:id="@+id/maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:text="by dzyob"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v0.0.1b"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/polzunok"
        android:max="200"
        android:progress="100"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/plusOne"
        tools:layout_editor_absoluteY="332dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="зажми циферки и измени их размер"
        app:layout_constraintBottom_toBottomOf="@+id/numb"
        android:layout_marginBottom="59dp"
        android:visibility="invisible"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/cursorImg"
        android:layout_width="71dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/cursor"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/commit"
        app:layout_constraintRight_toLeftOf="@+id/numb"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/numb"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.6"
        tools:layout_editor_absoluteY="123dp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="40dp" />


</android.support.constraint.ConstraintLayout>
